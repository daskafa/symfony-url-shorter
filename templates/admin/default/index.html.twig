{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
{#    {% if is_granted('ROLE_ADMIN') %} ... burası admin {% endif %}#}

    <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>




<div class="example-wrapper">


    <p>Kısaltma Yapılmış URL Listesi ve Hash'leri: </p>
    <ul>
        {% for url in urls %}
        <li>{{ url.url }} <p style="color: darkred">Hash: <a href="http://pa.th/{{ url.getUrlHash() }}" target="_blank">http://pa.th/{{ url.getUrlHash() }}</a></p></li>
        {% endfor %}
    </ul>



    <p>Kayıtlı Kullanıcılar: Toplam {{ users | length }} adet.</p>
    <ul>
        {% for user in users %}
        <li>{{ user.email }}</li>
        {% endfor %}
    </ul>




</div>
{% endblock %}
