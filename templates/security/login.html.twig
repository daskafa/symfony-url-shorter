{% extends 'base.html.twig' %}
{% block title %}Log in!{% endblock %}
{% block body %}
<form method="post">



    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 bg-yellow-400">
        <div class="max-w-md w-full space-y-8">
            <div>
                <img class="mx-auto h-24 w-auto" src="{{ configs[7].content }}" alt="Workflow">
                <h2 class="mt-6 text-center text-2xl font-extrabold nice-blue font-bold">
                    Binlerce Kısaltma İçin Giriş Yap!
                </h2>
            </div>

                {% if app.user %}
                    <div class="mt-2 mb-2 bg-green-500 text-white px-2 py-3 text-center rounded-md">
                        <p>You are logged in as {{ app.user.username }}</p>  <a class="nice-blue font-bold" href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
            {% if error %}
                <div class="mt-2 mb-2 bg-red-500 text-white px-2 py-3 text-center rounded-md">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form class="mt-8 space-y-6" action="#" method="POST">
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm mt-2">
                    <div>
                        <label for="email-address" class="sr-only">Email address</label>
                        <input id="email-address" name="email" type="email" autocomplete="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-white focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Email address">
                    </div>
                    <div>
                        <label for="password" class="sr-only">Password</label>
                        <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-white focus:border-indigo-500 focus:z-10 sm:text-sm" placeholder="Password">
                    </div>
                </div>
{#                <input type="hidden" name="_csrf_token"#}
{#                       value=""#}
{#                >#}
{#                <div>#}
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div>
                    <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border-2 border-yellow-400 text-xl font-medium rounded-md font-bold bg-yellow-400 nice-blue-bg text-yellow-400 hover:border-blue-900 hover:bg-transparent hover:text-white duration-300 focus:outline-none">
                                  <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                                    <svg class="h-5 w-5 text-white group-hover:text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                      <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                    </svg>
                                  </span>
                        Giriş Yap
                    </button>
                </div>
            </form>
        </div>
    </div>

</form>
{% endblock %}
